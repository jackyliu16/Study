    gaussian_filter_img = gaussian(gaussian_img)
    # 用低通滤波器来过滤噪声
    (dftshift, res1) = fourier_transform(gaussian_img)
    f1 = low_pass_filter(img, dftshift)
    (ishift, res2) = inverse_fourier_transform(f1)
    
